@model Jobney.Casm.Web.Models.TripInfoDataBootstrapper

<script>
    (function () {
        'use strict';

        var app = angular.module('Jobney.Casm.TripInfoApp', [
            'ui.router',
            'ui.bootstrap',
            'ui.sortable',
            'ui.select2',
            'Jobney.Casm.SharedServices'
        ]);

        app.config(['$stateProvider', '$urlRouterProvider',
        function ($stateProvider, $urlRouterProvider) {

            $stateProvider.state('new', {
                templateUrl: '@Url.Content("~/Scripts/apps/tripinfo/templates/new.html")',
                url: '/new'
            });

            $stateProvider.state('edit', {
                templateUrl: '@Url.Content("~/Scripts/apps/tripinfo/templates/edit.html")',
                url: '/edit/:id'
            });

            $urlRouterProvider
              .otherwise('/new');

        }]);

        app.factory('BootstrappedData', [function() {
            var service = {};

            service.airplanes = @Html.Raw(Model.Airplanes);
            service.passengers = @Html.Raw(Model.Passengers);

            return service;
        }]);

        app.run([function () {

        }]);
    })();
</script>

@Scripts.Render("~/bundles/ng-tripinfo-app")
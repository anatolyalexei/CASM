@model Jobney.Casm.Web.Models.ManageDataBootstrapper

<script>
    (function () {
        'use strict';

        var app = angular.module('Jobney.Casm.ManageApp', [
            'ui.router',
            'ui.bootstrap'
        ]);

        app.config(['$stateProvider', '$urlRouterProvider',
            function ($stateProvider, $urlRouterProvider) {
                $stateProvider.state('pilots', {
                    templateUrl: '@Url.Content("~/Scripts/apps/manage/templates/pilots.html")',
                    url: '/pilots'
                });

                $stateProvider.state('passengers', {
                    templateUrl: '@Url.Content("~/Scripts/apps/manage/templates/passengers.html")',
                    url: '/passengers'
                });

                $stateProvider.state('airplanes', {
                    templateUrl: '@Url.Content("~/Scripts/apps/manage/templates/airplanes.html")',
                    url: '/airplanes'
                });

                $stateProvider.state('settings', {
                    templateUrl: '@Url.Content("~/Scripts/apps/manage/templates/settings.html")',
                    url: '/settings'
                });

            $urlRouterProvider
                .otherwise('/pilots');

        }]);

        app.factory('BootstrappedData', [function() {
            var service = {};

            service.pilots = @Html.Raw(Model.Pilots);
            service.passengers = @Html.Raw(Model.Passengers);
            service.settings = @Html.Raw(Model.Settings);

            return service;
        }]);


        app.run([function () {

        }]);
    })();
</script>

@Scripts.Render("~/bundles/ng-manage-app")
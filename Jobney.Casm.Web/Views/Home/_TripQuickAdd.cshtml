@model Jobney.Casm.Web.ViewModels.TripCalendarViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        Add Trip
        <ul class="panel-toolbar">
            <li>
                <a class="collapse-toggle"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label for="NewTripTitle">Title</label>
            <input type="text" class="form-control input-sm" id="NewTripTitle" placeholder="Appears On Calendar">
        </div>
        <div class="form-group">
            <label for="NewTripDate">Date</label>
            <div class="input-group">
                <input type="text" class="form-control input-sm" id="NewTripDate" placeholder="Trip Date">
                <span class="input-group-addon">
                    <i class="fa fa-calendar"></i>
                </span>
            </div>
        </div>
        <div class="form-group">
            <label for="NewTripAirplane">Airplane</label>
            <select id="NewTripAirplane" class="form-control input-sm">
                @foreach (var plane in Model.Airplanes)
                {
                    <option value="@plane.Id">@plane.Name</option>
                }
            </select>
        </div>
        <button data-action="add-trip" class="btn btn-block btn-primary">Add Trip</button>
    </div>
</div><!-- /panel -->